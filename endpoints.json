{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [
      {
        "field": "sort_by",
        "values": [
          "article_id",
          "title",
          "topic",
          "author",
          "created_at",
          "votes"
        ]
      },
      {
        "field": "order_by",
        "values": ["DESC","ASC"]
      },
      {
        "field": "topic",
        "values": ["mitch", "cats"]
      }
    ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of one article depending on article_id searched",
    "queries": [],
    "exampleResponse": {
      "article_id": 6,
      "title": "A",
      "topic": "mitch",
      "author": "icellusedkars",
      "body": "Delicious tin of cat food",
      "created_at": 1602986400000,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
      "comment_count": 1
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves and object of all comments for the article searched",
    "queries": [],
    "exampleResponse": {
      "comment_id": 17,
      "body": "The owls are not what they seem.",
      "votes": 20,
      "author": "icellusedkars",
      "article_id": 9,
      "created_at": 1584205320000
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment to the the chosen article",
    "queries": [],
    "exampleResponse": {
      "comment_id": 19,
      "body": "this sucks",
      "article_id": 2,
      "author": "butter_bridge",
      "votes": 0,
      "created_at": "2024-07-16T13:11:10.541Z"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes on the chosen article",
    "queries": [],
    "exampleResponse": {
      "article_id": 1,
      "title": "Living in the shadow of a great man",
      "topic": "mitch",
      "author": "butter_bridge",
      "body": "I find this existence challenging",
      "created_at": "2020-07-09T20:11:00.000Z",
      "votes": 110,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment from its ID",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "username": "butter_bridge",
      "name": "jonny",
      "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
    }
  }
}
